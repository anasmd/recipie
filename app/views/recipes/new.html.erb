<script>
  jQuery(document).ready(function(){
    jQuery('.remove_nested_fields').each(function(){
      jQuery(this).html('<img src="/assets/remove.png"  border="0" />')
    })
    jQuery('.add_nested_fields').each(function(){
      jQuery(this).html('<img src="/assets/add.png"  border="0" />')
    })
  });
</script>
<%= nested_form_for(@recipe, :validate => true, :html => {:multipart => true ,:id => "nested_form"}) do |f| %>
  <%= render :partial => "form", :locals => {:f => f} %>
<% end %>

