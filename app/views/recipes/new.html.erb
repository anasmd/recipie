<script>
  jQuery(document).ready(function(){
    jQuery('.remove_nested_fields').each(function(){
      jQuery(this).html('<img src="/assets/remove.png"  border="0" />')
    })
    jQuery('.add_nested_fields').each(function(){
      jQuery(this).html('<img src="/assets/add.png"  border="0" />')
    })
  });
</script>
<%= nested_form_for(@recipe, :html => {:multipart => true ,:id => "nested_form"}) do |f| %>
  <ul>
    <li class="left">
      <span><%= f.label :title %></span>
      <%= f.text_field :title %>
    </li>
    <%= f.fields_for :image do |image_form| %>
      <li class="left">
        <span><%= image_form.label :file %></span>
        <%= image_form.file_field :file %>
      </li>
    <% end %>
    <li class="header">
      <span>Qunatity</span>
      <span>Measure</span>
      <span>Ingredient</span>
      <span>Notes</span>
    </li>
    <%= f.fields_for :ingredients do |ingredient_form| %>
      <li class="fields">
        <span><%= ingredient_form.text_field :quantity %></span>
        <span><%= ingredient_form.text_field :measure %></span>
        <span><%= ingredient_form.text_field :name %></span>
        <span><%= ingredient_form.text_area :notes %></span>
        <span><%= ingredient_form.link_to_remove "Remove" %></span>
      </li>
    <% end %>
    <li><%= f.link_to_add "Add", :ingredients %></li>
    <li class="text">
      <span><%=f.label :directions%></span>
      <%= f.text_area :directions %>
    </li>
    <li class="left">
      <span><%= f.label :preperation_time %></span>
      <%= f.text_field :preperation_time %>
    </li>
    <li class="left">
      <span><%= f.label :cooking_time %></span>
      <%= f.text_field :cooking_time %>
    </li>

    <li class="left">
      <span><%= f.label :serving_size %></span>
      <%= f.text_field :serving_size%>
    </li>
    <li class="left">
      <span><%= f.label :cusisine_id %></span>
      <%= f.text_field :cusisine_id %>
    </li>

    <li class="text">
      <span><%= f.label :story %></span>
      <%= f.text_area :story %>
    </li>
    <li class="left">
      <span><%= f.label :course %></span>
      <%= f.text_field :course %>
    </li>
    <li class="left">
      <span><%= f.label :occasion %></span>
      <%= f.text_field :occasion %>
    </li>
    <li>
      <span><%= f.label :favourate %></span>
      <%= f.check_box :favourate %>
    </li>
    <li><%= f.submit "Save Recipie" %></li>
  </ul>
<% end %>

