<%= nested_form_for(@recipy, :html => {:id => "nested_form"}) do |f| %>
  <ul>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>
    <li>
      <table>
        <thead>
          <tr>
            <th>Qunatity</th>
            <th>Measure</th>
            <th>Ingredien</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <%= f.fields_for :ingredients do |ingredient_form| %>
            <tr class="fields">
              <td>
                <%= ingredient_form.text_field :quantity %>
              </td>
              <td>
                <%= ingredient_form.text_field :measure %>
              </td>
              <td>
                <%= ingredient_form.text_field :name %>
              </td>
              <td>
                <%= ingredient_form.text_area :notes, :rows => 2, :cols => 10 %>
              </td>
              <td><%= ingredient_form.link_to_remove "Remove" %></td>
            </tr>
          <% end %>
          <tr>
            <td colspan="6">
            <%= f.link_to_add "Add", :ingredients %>
            </td>
          </tr>
        </tbody>
      </table>
    </li>
    <li>
      <%=f.label :directions%>
      <%= f.text_area :directions , :col => 15, :rows => 5%>
    </li>
    <li>
      <%= f.label :preperation_time %>
      <%= f.text_field :preperation_time %>
    </li>
    <li>
      <%= f.label :cooking_time %>
      <%= f.text_field :cooking_time %>
    </li>
    <li>
      <%= f.label :serving_size %>
      <%= f.text_field :serving_size, :col => 15, :rows => 5%>
    </li>
    <li>
      <%= f.label :story %>
      <%= f.text_area :story , :col => 15, :rows => 5%>
    </li>
    <li>
      <%= f.label :course %>
      <%= f.text_field :course %>
    </li>
    <li>
      <%= f.label :cusisine_id %>
      <%= f.text_field :cusisine_id %>
    </li>
    <li>
      <%= f.label :occasion %>
      <%= f.text_field :occasion %>
    </li>
    <li>
      <%= f.label :favourate %>
      <%= f.check_box :favourate %>
    </li>
  <%# end %>
  </ul>
<% end %>
